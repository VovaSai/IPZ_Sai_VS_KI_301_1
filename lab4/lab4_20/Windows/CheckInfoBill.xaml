<Window x:Class="lab2_20.Windows.CheckInfoBill"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        Title="Інформація про рахунок" 
        Height="400" 
        Width="600"
        WindowStartupLocation="CenterScreen"
        Background="Transparent"
        WindowStyle="None"
        AllowsTransparency="True">
    
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../styles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>

    <Border CornerRadius="20" Background="{StaticResource BackgroundGradient}">
        <Border.Effect>
            <DropShadowEffect BlurRadius="15" Direction="-90" RenderingBias="Quality" ShadowDepth="2"/>
        </Border.Effect>
        
        <Grid Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="40"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Панель заголовка -->
            <Grid Grid.Row="0" Background="Transparent" MouseLeftButtonDown="DragWindow">
                <DockPanel LastChildFill="False" Background="Transparent">
                    <TextBlock Text="Інформація про рахунок" 
                             Foreground="White" 
                             FontSize="16" 
                             FontWeight="Medium"
                             VerticalAlignment="Center"
                             Margin="20,0,0,0"
                             DockPanel.Dock="Left"/>
                    
                    <Button DockPanel.Dock="Right" 
                            Style="{StaticResource WindowControlButton}" 
                            Click="CloseWindow" 
                            Content="✕"/>
                </DockPanel>
            </Grid>

            <!-- Основний контент -->
            <Border Grid.Row="1" 
                    Background="#1E2A3B" 
                    CornerRadius="15" 
                    Margin="0,10,0,0">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="10" Direction="-90" RenderingBias="Quality" ShadowDepth="2"/>
                </Border.Effect>

                <Grid Margin="30">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Заголовки -->
                    <TextBlock Grid.Row="0" Grid.Column="0"
                             Text="Назва послуги:" 
                             Foreground="#8FA3BF"
                             FontSize="14"
                             Margin="0,0,20,20"/>
                    <TextBlock Grid.Row="0" Grid.Column="1"
                             Text="{Binding Name}" 
                             Foreground="White"
                             FontSize="14"
                             Margin="0,0,0,20"/>

                    <TextBlock Grid.Row="1" Grid.Column="0"
                             Text="Ціна:" 
                             Foreground="#8FA3BF"
                             FontSize="14"
                             Margin="0,0,20,20"/>
                    <TextBlock Grid.Row="1" Grid.Column="1"
                             Text="{Binding Price}" 
                             Foreground="White"
                             FontSize="14"
                             Margin="0,0,0,20"/>

                    <TextBlock Grid.Row="2" Grid.Column="0"
                             Text="Реквізити:" 
                             Foreground="#8FA3BF"
                             FontSize="14"
                             Margin="0,0,20,20"/>
                    <TextBlock Grid.Row="2" Grid.Column="1"
                             Text="{Binding Requisites}" 
                             Foreground="White"
                             FontSize="14"
                             Margin="0,0,0,20"
                             TextWrapping="Wrap"/>

                    <TextBlock Grid.Row="3" Grid.Column="0"
                             Text="Періодичність:" 
                             Foreground="#8FA3BF"
                             FontSize="14"
                             Margin="0,0,20,20"/>
                    <TextBlock Grid.Row="3" Grid.Column="1"
                             Text="{Binding Days}" 
                             Foreground="White"
                             FontSize="14"
                             Margin="0,0,0,20"/>
                </Grid>
            </Border>
        </Grid>
    </Border>
</Window>