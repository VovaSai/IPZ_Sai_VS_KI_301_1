<Window x:Class="lab2_20.Windows.ViewPaidBills"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        Title="Історія оплачених рахунків" 
        Height="600" 
        Width="1000"
        WindowStartupLocation="CenterScreen"
        Background="Transparent"
        WindowStyle="None"
        AllowsTransparency="True">
    
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../styles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>

    <Border CornerRadius="20" Background="{StaticResource BackgroundGradient}">
        <Border.Effect>
            <DropShadowEffect BlurRadius="15" Direction="-90" RenderingBias="Quality" ShadowDepth="2"/>
        </Border.Effect>
        
        <Grid Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="40"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Панель заголовка -->
            <Grid Grid.Row="0" Background="Transparent" MouseLeftButtonDown="DragWindow">
                <DockPanel LastChildFill="False" Background="Transparent">
                    <TextBlock Text="Історія оплачених рахунків" 
                             Foreground="White" 
                             FontSize="16" 
                             FontWeight="Medium"
                             VerticalAlignment="Center"
                             Margin="20,0,0,0"
                             DockPanel.Dock="Left"/>
                    
                    <Button DockPanel.Dock="Right" 
                            Style="{StaticResource WindowControlButton}" 
                            Click="CloseWindow" 
                            Content="✕"/>
                    <Button DockPanel.Dock="Right" 
                            Style="{StaticResource WindowControlButton}" 
                            Click="MaximizeWindow" 
                            Content="☐"/>
                    <Button DockPanel.Dock="Right" 
                            Style="{StaticResource WindowControlButton}" 
                            Click="MinimizeWindow" 
                            Content="—"/>
                </DockPanel>
            </Grid>

            <!-- Основний контент -->
            <Border Grid.Row="1" 
                    Background="#1E2A3B" 
                    CornerRadius="15" 
                    Margin="0,10,0,0">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="10" Direction="-90" RenderingBias="Quality" ShadowDepth="2"/>
                </Border.Effect>

                <ListView Margin="20" 
                         ItemsSource="{Binding Bills}"
                         SizeChanged="DynamicListView">
                    <ListView.View>
                        <GridView>
                            <GridViewColumn Header="Назва послуги" Width="250">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding Name}" 
                                                 Foreground="White"/>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                            <GridViewColumn Header="Ціна" Width="150">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding Price}" 
                                                 Foreground="White"/>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                            <GridViewColumn Header="Реквізити" Width="300">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding Requisites}" 
                                                 Foreground="White"
                                                 TextWrapping="Wrap"/>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                            <GridViewColumn Header="Період оплати (у днях)" Width="200">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding Days}" 
                                                 Foreground="White"/>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                        </GridView>
                    </ListView.View>
                </ListView>
            </Border>
        </Grid>
    </Border>
</Window>