<Window x:Class="lab2_20.Windows.ChangeBillWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        mc:Ignorable="d"
        Title="Редагування рахунку" 
        Height="600" 
        Width="500"
        WindowStartupLocation="CenterScreen"
        Background="Transparent"
        WindowStyle="None"
        AllowsTransparency="True"
        ResizeMode="CanResize">
    
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../styles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>

    <Border CornerRadius="20" Background="{StaticResource BackgroundGradient}">
        <Border.Effect>
            <DropShadowEffect BlurRadius="15" Direction="-90" RenderingBias="Quality" ShadowDepth="2"/>
        </Border.Effect>
        
        <Grid Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="40"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Панель заголовка -->
            <Grid Grid.Row="0" Background="Transparent" MouseLeftButtonDown="DragWindow">
                <DockPanel LastChildFill="False" Background="Transparent">
                    <TextBlock Text="Редагування рахунку" 
                             Foreground="White" 
                             FontSize="16" 
                             FontWeight="Medium"
                             VerticalAlignment="Center"
                             Margin="20,0,0,0"
                             DockPanel.Dock="Left"/>
                    
                    <Button DockPanel.Dock="Right" 
                            Style="{StaticResource WindowControlButton}" 
                            Click="CloseClick" 
                            Content="✕"/>
                    <Button DockPanel.Dock="Right" 
                            Style="{StaticResource WindowControlButton}" 
                            Click="MinimizeWindow" 
                            Content="—"/>
                </DockPanel>
            </Grid>

            <!-- Основний контент -->
            <Border Grid.Row="1" 
                    Background="#1E2A3B" 
                    CornerRadius="15" 
                    Margin="0,10,0,0">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="10" Direction="-90" RenderingBias="Quality" ShadowDepth="2"/>
                </Border.Effect>

                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel Margin="30,20">
                        <TextBlock Text="Назва послуги"
                                 Foreground="#8FA3BF"
                                 FontSize="14"
                                 Margin="5,10,5,5"/>
                        <TextBox Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}"
                                Height="44"
                                Background="#253449"
                                Foreground="White"
                                BorderThickness="0"/>

                        <TextBlock Text="Ціна послуги"
                                 Foreground="#8FA3BF"
                                 FontSize="14"
                                 Margin="5,20,5,5"/>
                        <TextBox Text="{Binding Price, UpdateSourceTrigger=PropertyChanged}"
                                Height="44"
                                Background="#253449"
                                Foreground="White"
                                BorderThickness="0"/>

                        <TextBlock Text="Реквізит послуги"
                                 Foreground="#8FA3BF"
                                 FontSize="14"
                                 Margin="5,20,5,5"/>
                        <TextBox Text="{Binding Requisites, UpdateSourceTrigger=PropertyChanged}"
                                Height="44"
                                Background="#253449"
                                Foreground="White"
                                BorderThickness="0"/>

                        <TextBlock Text="Кількість днів між оплатами"
                                 Foreground="#8FA3BF"
                                 FontSize="14"
                                 Margin="5,20,5,5"/>
                        <TextBox Text="{Binding Days, UpdateSourceTrigger=PropertyChanged}"
                                Height="44"
                                Background="#253449"
                                Foreground="White"
                                BorderThickness="0"/>

                        <Grid Margin="0,40,0,20">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <Button Grid.Column="0"
                                    Style="{StaticResource GlassButton}"
                                    Click="ChangeBillClick"
                                    Margin="0,0,10,0">
                                <TextBlock Text="Зберегти" Foreground="Black"/>
                            </Button>

                            <Button Grid.Column="1"
                                    Style="{StaticResource DangerGlassButton}"
                                    Click="CloseClick"
                                    Margin="10,0,0,0">
                                <TextBlock Text="Скасувати"/>
                            </Button>
                        </Grid>
                    </StackPanel>
                </ScrollViewer>
            </Border>
        </Grid>
    </Border>
</Window>